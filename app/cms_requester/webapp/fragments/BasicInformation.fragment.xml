<core:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid">
    
          <f:SimpleForm
      id="contractSimpleForm"
            editable="true"
            title="Contract Information"
            
            maxContainerCols="1"
            layout="ResponsiveGridLayout"
            labelSpanL="4" labelSpanM="4" labelSpanS="12"
            adjustLabelSpan="true"
            columnsL="1"
            columnsM="1"
            columnsXL="1"
            class="contractForm"
       
    >
        <f:content>
            <Label text="Contract Title" required="true"/>
            <Input 
                id="contractTitleInput" 
                placeholder="Enter contract title" 
                value="{contractModel>/name}"
                width="500px" 
                required="true"
                change="onControlValueChange"
                editable="{appModel>/isFieldEditable}"
            />

            <Label text="Contract Number / Reference ID" visible="{= !!${contractModel>/ID} }"/>
            <Input 
                id="contractNumberInput" 
                placeholder="Enter contract ID" 
                value="{contractModel>/ID}" 
                editable="false"
                width="500px"
                visible="{= !!${contractModel>/ID} }"
                change="onControlValueChange"
            />

            <Label text="Contract Type" required="true"/>
            <ComboBox 
                id="contractTypeSelect" 
                placeholder="Please select"
                selectedKey="{contractModel>/templates_ID}" 
                items="{path: '/Templates'}"
                width="500px"
                editable="{= !${contractModel>/ID} }"
                required="true"
                change="onControlValueChange"
            >
                <core:Item key="{ID}" text="{name}" />
            </ComboBox>
            <Label text="Alias" required="true"/>
            <Input 
                id="contractaliasInput" 
                placeholder="Enter contract title" 
                value="{contractModel>/alias}"
                width="500px" 
                required="true"
                change="onControlValueChange"
                                editable="{appModel>/isFieldEditable}"

            />
            <Label text="Description" required="true"/>
            <Input 
                id="contractdescriptionInput" 
                placeholder="Enter contract title" 
                value="{contractModel>/description}"
                width="500px" 
                required="true"
                change="onControlValueChange"
                                editable="{appModel>/isFieldEditable}"

            />
            <Label text="Start Date"></Label>
            <DatePicker value="{contractModel>/start_date}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" width="500px" editable="{appModel>/isFieldEditable}"
 ></DatePicker>
            <Label text="Expiry Date"></Label>
            <DatePicker value="{contractModel>/end_date}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" width="500px" editable="{appModel>/isFieldEditable}"
></DatePicker>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>