    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:dnd="sap.ui.core.dnd" controllerName="com.dhi.cms.cmsadmin.controller.CreateTemplate">
    <Page id="createTemplate" showHeader="false">
        <content>
            <OverflowToolbar class="customToolbar" height="3rem" design="Transparent">
                <Title class="sapUiSmallMarginBegin" titleStyle="H4" text="{i18n>Create_Template_Title}" id="createTemplateTitle"/>
                <ToolbarSpacer/>
                <!-- <Button class="sapUiTinyMarginEnd" type="Neutral" text="{i18n>Create_Template_DoneButton}" icon="sap-icon://complete" press="onNavigation('Templates')"/> -->
                <Button type="Emphasized" text="{i18n>Create_Template_SaveButton}" icon="sap-icon://save" press="onSave" />
                <Button class="sapUiSmallMarginEnd" text="{i18n>Create_Template_CancelButton}" icon="sap-icon://decline" press="onNavigation('Templates')"/>
            </OverflowToolbar>
            <f:GridList class="sapUiMediumMarginTop sapUiMediumMarginBegin" width="96%">
                <f:GridListItem>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="auto" />
                    </f:layoutData>
                    <HBox id="templateData" class="sapUiLargeMarginTop sapUiSmallMarginBottom sapUiLargeMarginBegin" alignItems="Start" justifyContent="SpaceBetween">
                        <VBox class="sapUiLargeMarginEnd" width="100%">
                            <Label class="sapUiTinyMarginBottom" text="{i18n>Create_Template_TemplateID}" labelFor="templateIdInput"/>
                            <Input placeholder="{i18n>Create_Template_TemplateIDPlaceholder}" width="100%" editable="false" value="{appModel>/Template/ID}" />
                        </VBox>
                        <VBox class="sapUiLargeMarginBeginEnd" width="100%">
                            <Label class="sapUiTinyMarginBottom" text="{i18n>Create_Template_TemplateName}" labelFor="templateNameInput" required="true"/>
                            <Input id="templateNameInput" placeholder="{i18n>Create_Template_TemplateNamePlaceholder}" width="100%" value="{appModel>/Template/name}"/>
                        </VBox>
                        <VBox class="sapUiLargeMarginBeginEnd" width="100%">
                            <Label class="sapUiTinyMarginBottom" text="{i18n>Create_Template_Description}" labelFor="templateDescInput"/>
                            <Input id="templateDescInput" placeholder="{i18n>Create_Template_DescriptionPlaceholder}" width="100%" value="{appModel>/Template/desc}"/>
                        </VBox>
                    </HBox>
                    <OverflowToolbar/>
