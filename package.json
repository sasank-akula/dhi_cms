{
  "name": "dhi_cms",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.7",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-cms_admin": "cds watch --open com.dhi.cms.cmsadmin/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy dhi_cms --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-cms_requester": "cds watch --open com.dhi.cms.cmsrequester/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth": "dummy",
      "db": {
        "[production]": {
          "kind": "hana",
          "vcap": {
            "label": "hana",
            "name": "dhi_cms-db"
          },
          "pool": {
            "max": 1400,
            "min": 100
          }
        },
        "[development]": {
          "kind": "hana-cloud",
          "vcap": {
            "label": "hana",
            "name": "dhi_cms-db"
          },
          "pool": {
            "max": 1400,
            "min": 100
          }
        }
      }
    },
     "server": {
      "body_parser": {
        "limit": "50mb"
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
