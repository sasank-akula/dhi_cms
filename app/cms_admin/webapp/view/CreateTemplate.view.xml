                    <HBox renderType="Bare" class="sapUiLargeMargin">
                        <OverflowToolbar width="100%">
                            <Title text="{i18n>Create_Template_AttributeGroups}" id="attributeGroupsTitle2"/>
                            <ToolbarSpacer />
                            <Button text="{i18n>Create_Template_AddAttributeGroupButton}" icon="sap-icon://add-document" press="onAddAttributeGroup"/>
                        </OverflowToolbar>
                    </HBox>
                    <HBox renderType="Bare" class="sapUiLargeMargin">
                        <table:TreeTable id="tblAttrGrpTemplate2" selectionMode="None" enableSelectAll="false" ariaLabelledBy="attributeGroupsTitle2" rowHeight="40">
                            <table:columns>
                                <table:Column width="30rem">
                                    <Label text="{i18n>Create_Template_AttributeGroupName}"/>
                                    <table:template>
                                        <Text text="{appModel>name}" wrapping="false"/>
                                    </table:template>
                                </table:Column>

                                <table:Column width="30rem">
                                    <Label text="{i18n>Create_Template_AttributeGroupDescription}"/>
                                    <table:template>
                                        <Text text="{appModel>desc}" wrapping="false"/>
                                    </table:template>
                                </table:Column>

                                <!-- Portal Enabled Column -->
                                <!-- <table:Column width="8rem" hAlign="Center">
                                    <Label text="Portal Enabled" />
                                    <table:template>
                                        <Switch state="{appModel>isPortalEnabled}" change="onAttributeSwitchChange" visible="{= !${appModel>Rank} }" />
                                    </table:template>
                                </table:Column> -->

                                <!-- Delete Column -->
                                <table:Column width="15rem" hAlign="Center">
                                    <Label text="Remove Attribute Group" />
                                    <table:template>
                                        <Button icon="sap-icon://delete" type="Reject" tooltip="{i18n>Create_Template_DeleteAttributeGroupTooltip}" press="onDeleteAttributeGroup" visible="{= ${appModel>Rank} > 0 }" />
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:TreeTable>
                    </HBox>
                </f:GridListItem>
            </f:GridList>
        </content>
    </Page>
